{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "types": ["vitest/globals"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "schema-openapi": [
        "./src/index.ts"
      ],
      "schema-openapi/*": [
        "./src/*"
      ]
    },
    "exactOptionalPropertyTypes": true
  },
  "include": ["src", "test", "examples"]
}
